{{#each locations as |location|}}

 <!-- Developers, why are we using data-id and not just id? -->
  <div>
  <ul data-id="{{location.id}}">
  <li><h1> <small>Address: {{location.address}}</small></h1></li>
  <li><h2> <small>Business Type: {{location.business}}</small></h2></li>
  <li><h2> <small>Insured Units: {{location.units}}</small></h2></li>
  <li><h2> <small>Company: {{location.company}}</small></h2></li>
  <li><h2> <small>Compliance Errors: {{location.compliance}}</small></h2></li>
  <li><h2> <small>Inspection Date: {{location.inspection}}</small></h2></li>
  <li><button class="removeButton btn btn-default">Remove Location</button></li>
  <li><div class="updateButton" id="updateHandleButton">
    <button type="button" class="asideButton btn-default" data-toggle="modal" data-target="#updateLocationModal">
      Update Location
    </button>
    <form class="dataAccess" id="updateLocation">
    <div class="modal fade" id="updateLocationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="modal-title" id="signInModalLabel">Update Location</h3>
          </div>
          <div class="modal-body">

            <div class="form-group">
            <label>Address</label>
            <input type="text" class="form-control" name="location[address]" id="addressUpdate" placeholder="Enter Address">
            </div>

            <!-- <div class="form-group">
            <label>Business Type</label>
            <input type="text" class="form-control" name="location[business]" id="businessUpdate" placeholder="Enter Business Type">
            </div> -->
            <div class="form-group">
              <label for="exampleSelect1">Business Type</label>
              <select class="form-control" id="exampleSelect1" name="location[business]">
                <option>Service</option>
                <option>Merchandising</option>
                <option>Manufacturing</option>
                <option>Hybrid</option>
                <option>Other</option>
              </select>
            </div>

            <div class="form-group">
            <label>Units Insured</label>
            <input type="text" class="form-control" name="location[units]" id="unitUpdate" placeholder="Enter Units Insured">
            </div>

            <div class="form-group">
            <label>Company</label>
            <input type="text" class="form-control" name="location[company]" id="companyUpdate" placeholder="Enter Company Name">
            </div>

            <div class="form-group">
            <label>Compliance Errors</label>
            <input type="text" class="form-control" name="location[compliance]" id="complianceUpdate" placeholder="Enter Number of Compliance Errors">
            </div>

            <div class="form-group">
            <label>Inspection Date</label>
            <input type="text" class="form-control" name="location[inspection]" id="inspectionUpdate" placeholder="Enter Next Inspection Date">
            </div>

          <div class="modal-footer">
            <button type="button" class="btn-danger modalCloseButton" data-dismiss="modal">Close</button>
            <button type="submit" class="btn-danger updateFormButton modalConfirmButton" id="updateFormButton">Update Location</button>
          </div>
        </div>
      </div>
    </div>
    </form>
  </li>
  </ul>
  </div>

{{/each}}
