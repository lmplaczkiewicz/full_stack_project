{{#each locations as |location|}}

  <table class="locationHolder" data-id="{{location.id}}">
    <tr>
      <td><h1> <small>Address: {{location.address}}</small></h1></td>
      <td><h2> <small>Insured Units: {{location.units}}</small></h2></td>
    </tr>
    <tr>
      <td><h2> <small>Company: {{location.company}}</small></h2></td>
      <td><h2> <small>Business Type: {{location.business}}</small></h2></td>
    </tr>
    <tr>
      <td><h2> <small>Next Inspection Date: {{location.inspection}}</small></h2></td>
      <td><h2> <small>Compliance Errors: {{location.compliance}}</small></h2></td>
    </tr>
    <tr>
      <td><button data-id="{{location.id}}" class="removeButton btn btn-default">Remove Location</button></td>
      <td><div data-id="{{location.id}}" class="updateButton" id="updateHandleButton"><button data-id="{{location.id}}" type="button" class="asideButton btn-default" data-toggle="modal" data-target="#updateLocationModal{{location.id}}">Update Location</button></td></div>
    </tr>
    <form data-id="{{location.id}}" class="dataAccess updateLocation" id="updateLocationId{{location.id}}">
    <div class="modal fade" id="updateLocationModal{{location.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content handlebarModal">
          <div class="modal-header">
            <h3 class="modal-title" id="signInModalLabel">Update Location</h3>
          </div>
          <div class="modal-body">

            <div class="form-group">
            <label>Address</label>
            <input type="text" class="form-control" name="location[address]" id="addressUpdate" value="{{location.address}}">
            </div>

            <!-- <div class="form-group">
            <label>Business Type</label>
            <input type="text" class="form-control" name="location[business]" id="businessUpdate" placeholder="Enter Business Type">
            </div> -->
            <div class="form-group">
              <label for="exampleSelect1">Business Type</label>
              <select class="form-control" id="exampleSelect1" name="location[business]">
                <option>Service</option>
                <option>Merchandising</option>
                <option>Manufacturing</option>
                <option>Hybrid</option>
                <option>Other</option>
              </select>
            </div>

            <div class="form-group">
            <label>Units Insured</label>
            <input type="text" class="form-control" name="location[units]" id="unitUpdate" value="{{location.units}}">
            </div>

            <div class="form-group">
            <label>Company</label>
            <input type="text" class="form-control" name="location[company]" id="companyUpdate" value="{{location.company}}">
            </div>

            <div class="form-group">
            <label>Compliance Errors</label>
            <input type="text" class="form-control" name="location[compliance]" id="complianceUpdate" value="{{location.compliance}}">
            </div>

            <div class="form-group">
            <label>Inspection Date</label>
            <input type="date" class="form-control" name="location[inspection]" id="inspectionUpdate" value="{{location.inspection}}">
            </div>

          <div class="modal-footer">
            <button type="button" class="btn-danger modalCloseButton" data-dismiss="modal">Close</button>
            <button data-id="{{location.id}}" type="submit" class="btn-primary updateFormButton modalConfirmButton" id="updateFormButton">Update Location</button>
          </div>
          </div>
        </div>
      </div>
    </div>
  </form>
</table>


{{/each}}
