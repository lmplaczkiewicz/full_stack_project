{{#each companies as |company|}}

<table class="companyHolder" data-id="{{company.id}}">
<caption>{{company.name}}</caption>
      <thead>
        <tr>
          <th scope="col">Risk Manager</th>
          <th scope="col">Phone Number</th>
          <th scope="col">Email</th>
          <th scope="col"><div data-id="{{company.id}}" class="updateFormCompanyButton" id="updateHandleButton"><button  data-id="{{company.id}}" type="button" class="updateHandleButton btn-primary" data-toggle="modal" data-target="#updateCompanyModal{{company.id}}">Update Company</button>
            <form data-id="{{company.id}}" class="dataAccess updateCompany" id="updateCompanyId{{company.id}}">
            <div class="modal fade errorTarget" id="updateCompanyModal{{company.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content handlebarModal">
                  <div class="modal-header">
                    <h3 class="modal-title" id="updateModalLabel">Update Company</h3>
                  </div>
                  <div class="modal-body">
                    <div class="errorUpdateCompany"></div>
                    <div class="form-group">
                    <label>Company Name</label>
                    <input type="text" class="form-control" name="company[name]" id="managerUpdate" value="{{company.name}}" required>
                    </div>

                    <!-- <div class="form-group">
                    <label>Business Type</label>
                    <input type="text" class="form-control" name="company[business]" id="businessUpdate" placeholder="Enter Business Type">
                    </div> -->

                    <div class="form-group">
                    <label>Risk Manager</label>
                    <input type="text" class="form-control" name="company[manager]" id="managerUpdate" value="{{company.manager}}" required>
                    </div>

                    <div class="form-group">
                    <label>Phone Number</label>
                    <input type="text" class="form-control" name="company[phone]" id="phoneUpdate" value="{{company.phone}}" required>
                    </div>

                    <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="company[email]" id="emailRiskUpdate" value="{{company.email}}" required>
                    </div>

                  <div class="modal-footer">
                    <button type="button" class="btn-danger modalCloseButton" data-dismiss="modal">Close</button>
                    <button data-id="{{company.id}}" type="submit" class="btn-primary updateFormCompanyButton modalConfirmButton" id="updateFormCompanyButton">Update Company</button>
                  </div>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td scope="col">{{company.manager}}</td>
          <td scope="col">{{company.phone}}</td>
          <td scope="col">{{company.email}}</td>
          <td scope="col"><button data-id="{{company.id}}" class="removeCompanyButton btn-danger">Remove Company</button></td>
        </tr>
      </tbody>
  </table>


{{/each}}
